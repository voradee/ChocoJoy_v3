@model ChocoJoy.Models.ContactMessage
@{ ViewData["Title"] = "Contact Us"; }
<section class="p-4 rounded-3 mb-4" style="background:#fff6f2;border-radius:12px;">
  <div class="row">
    <div class="col-md-6">
      <h2>Contact Us</h2>
      <p>Questions? Orders? Send us a message and our support team will reply within 24 hours.</p>
      <ul class="list-unstyled">
        <li><strong>Address:</strong> 123 Cocoa Lane, Mumbai, India</li>
        <li><strong>Phone:</strong> +91 98765 43210</li>
        <li><strong>Email:</strong> support@chocojoy.example</li>
      </ul>
      <div class="mt-3"><iframe src="https://maps.google.com/maps?q=mumbai&t=&z=13&ie=UTF8&iwloc=&output=embed" style="width:100%;height:200px;border:0;border-radius:8px;"></iframe></div>
    </div>
    <div class="col-md-6">
      <h4>Send a message</h4>
      @if(ViewBag.Message!=null){ <div class="alert alert-success">@ViewBag.Message</div> }
      <form method="post">
        <div class="mb-3"><input asp-for="Name" class="form-control" placeholder="Your name" required/></div>
        <div class="mb-3"><input asp-for="Email" class="form-control" placeholder="Email" required/></div>
        <div class="mb-3"><input asp-for="Phone" class="form-control" placeholder="Phone (optional)"/></div>
        <div class="mb-3"><input asp-for="Subject" class="form-control" placeholder="Subject" required/></div>
        <div class="mb-3"><textarea asp-for="Message" class="form-control" rows="5" placeholder="Write your message..." required></textarea></div>
        <button class="btn btn-dark">Send message</button>
      </form>
    </div>
  </div>
</section>
