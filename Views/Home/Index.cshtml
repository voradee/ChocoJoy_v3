@model IEnumerable<ChocoJoy.Models.Product>
@{ ViewData["Title"]="Home"; }
<section class="hero p-5 rounded-4 mb-4 text-white" style="background-image:url('/images/bg-hero.jpg');background-size:cover;background-position:center;">
  <div class="container">
    <h1 class="display-4 fw-bold">ChocoJoy â€” Handcrafted Chocolates</h1>
    <p class="lead">Taste the luxury. Curated by artisans.</p>
    <a class="btn btn-dark btn-lg" href="/Products">Shop Collection</a>
  </div>
</section>

<h2 class="mb-4">Featured Chocolates</h2>
<div class="row">
  @foreach(var p in Model) {
    <div class="col-md-4 mb-4">
      <div class="card product-card h-100 shadow-sm">
        <img src="@p.ImageUrl" class="card-img-top" style="height:200px;object-fit:cover;" alt="@p.Name" />
        <div class="card-body">
          <h5 class="card-title">@p.Name</h5>
          <p class="card-text">@p.Description</p>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
          <strong class="text-danger">$@p.Price</strong>
          <a class="btn btn-sm btn-outline-dark" href="/Products/Details/@p.Id">View</a>
        </div>
      </div>
    </div>
  }
</div>
